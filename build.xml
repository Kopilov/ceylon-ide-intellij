<?xml version="1.0" encoding="UTF-8"?>
<project name="ceylon-ide-intellij" default="help" basedir=".">

    <tstamp>
        <format property="NOW" pattern="yyyyMMddHHmm" />
    </tstamp>

    <property name="ceylon.root.dir" value="${basedir}/../ceylon" />
    <property file="${basedir}/plugin-ceylon-code/build.properties"/>
    <property name="projects.base.dir" value="${basedir}/.." />
    <property name="build.dir" value="${basedir}/ant-build" />

    <target name="help">
        <echo>Options for building the Ceylon IDE plugins:
    ant clean              - Cleans the build environment
    ant build              - Builds Ceylon IDE for IntelliJ
        </echo>
    </target>

    <path id="ceylon.runtime">
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/common/1.3.0/com.redhat.ceylon.common-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/module-resolver/1.3.0/com.redhat.ceylon.module-resolver-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/ceylon/language/1.3.0/ceylon.language-1.3.0.car" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/model/1.3.0/com.redhat.ceylon.model-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/langtools/classfile/1.3.0/com.redhat.ceylon.langtools.classfile-1.3.0.jar" />
    </path>

    <path id="compile.runtime.classpath">
        <path refid="ceylon.runtime"/>
        <fileset dir="${ideaRoot}/lib" includes="**/*.jar"/>
    </path>

    <path id="compile.ide.classpath">
        <path refid="compile.runtime.classpath"/>

        <pathelement path="${build.dir}/runtime"/>

        <path refid="dist.classpath"/>
        <path refid="dist.classpath.nolib"/>


        <pathelement path="${dist.repo.dir}/org/tautua/markdownpapers/core/1.2.7/org.tautua.markdownpapers.core-1.2.7.jar" />
        <pathelement path="${dist.repo.dir}/org/antlr/stringtemplate/3.2.1/org.antlr.stringtemplate-3.2.1.jar" />
        <pathelement path="${dist.repo.dir}/org/jboss/logmanager/2.0.3.Final/org.jboss.logmanager-2.0.3.Final.jar" />
        <pathelement path="${dist.repo.dir}/org/antlr/antlr/2.7.7/org.antlr.antlr-2.7.7.jar" />
        <pathelement path="${dist.repo.dir}/org/apache/httpcomponents/httpcore/4.3.2/org.apache.httpcomponents.httpcore-4.3.2.jar" />
        <pathelement path="${dist.repo.dir}/org/antlr/runtime/3.4/org.antlr.runtime-3.4.jar" />
        <pathelement path="${dist.repo.dir}/org/apache/commons/codec/1.8/org.apache.commons.codec-1.8.jar" />
        <pathelement path="${dist.repo.dir}/net/minidev/json-smart/1.1.1/net.minidev.json-smart-1.1.1.jar" />
        <pathelement path="${dist.repo.dir}/org/apache/httpcomponents/httpclient/4.3.2/org.apache.httpcomponents.httpclient-4.3.2.jar" />
        <pathelement path="${dist.repo.dir}/org/apache/commons/logging/1.1.1/org.apache.commons.logging-1.1.1.jar" />
        <pathelement path="${dist.repo.dir}/com/github/rjeschke/txtmark/0.13/com.github.rjeschke.txtmark-0.13.jar" />
        <pathelement path="${dist.repo.dir}/com/github/lookfirst/sardine/5.1/com.github.lookfirst.sardine-5.1.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/maven-support/2.0/com.redhat.ceylon.maven-support-2.0.jar" />

        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/cli/1.3.0/com.redhat.ceylon.cli-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/compiler/js/1.3.0/com.redhat.ceylon.compiler.js-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/compiler/java/1.3.0/com.redhat.ceylon.compiler.java-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/typechecker/1.3.0/com.redhat.ceylon.typechecker-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/com/redhat/ceylon/tool/provider/1.3.0/com.redhat.ceylon.tool.provider-1.3.0.jar" />
        <pathelement path="${dist.repo.dir}/ceylon/runtime/1.3.0/ceylon.runtime-1.3.0.jar" />

        <pathelement path="${dist.libs.dir}/ceylon-bootstrap.jar" />
    </path>

    <path id="dist.classpath">
        <!-- for plugin -->
        <pathelement path="${basedir}/plugin-ceylon-code/modules/org/intellij/plugins/ceylon/ide/ceylonCode/current/org.intellij.plugins.ceylon.ide.ceylonCode-current.car" />
        <pathelement path="${projects.base.dir}/ceylon-ide-common/modules/com/redhat/ceylon/ide/common/1.3.0/com.redhat.ceylon.ide.common-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-ide-common/repo/org/jgrapht/core/0.9.1/org.jgrapht.core-0.9.1.jar" />
        <pathelement path="${projects.base.dir}/ceylon-ide-common/repo/net/lingala/zip4j/1.3.2/net.lingala.zip4j-1.3.2.jar" />
        <pathelement path="${projects.base.dir}/ceylon.tool.converter.java2ceylon/modules/ceylon/tool/converter/java2ceylon/1.3.0/ceylon.tool.converter.java2ceylon-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon.tool.converter.java2ceylon/repo/org/antlr/antlr4-runtime-osgi/4.5.1/org.antlr.antlr4-runtime-osgi-4.5.1.jar" />
    </path>
    <path id="dist.classpath.nolib">
        <!-- for plugin & dart compiler -->
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/collection/1.3.0/ceylon.collection-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/interop/java/1.3.0/ceylon.interop.java-1.3.0.car" />
        <!-- for dart compiler -->
        <pathelement path="${projects.base.dir}/ceylon.ast/modules/ceylon/ast/core/1.3.0/ceylon.ast.core-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon.ast/modules/ceylon/ast/create/1.3.0/ceylon.ast.create-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon.ast/modules/ceylon/ast/redhat/1.3.0/ceylon.ast.redhat-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/whole/1.3.0/ceylon.whole-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/json/1.3.0/ceylon.json-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/file/1.3.0/ceylon.file-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-sdk/modules/ceylon/buffer/1.3.0/ceylon.buffer-1.3.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-structures/modules/com/vasileff/ceylon/structures/1.0.0/com.vasileff.ceylon.structures-1.0.0.car" />
        <pathelement path="${projects.base.dir}/ceylon-dart/ceylon-dart-compiler/build/modules-jvm/main/com/vasileff/ceylon/dart/compiler/1.3.0-DP3/com.vasileff.ceylon.dart.compiler-1.3.0-DP3.car" />
    </path>

    <target name="build-ide">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2">
            <classpath refid="compile.runtime.classpath"/>
        </taskdef>

        <mkdir dir="${build.dir}/CeylonIDEA/classes"/>
        <mkdir dir="${build.dir}/CeylonIDEA/lib"/>
        <javac srcdir="${basedir}/jps-plugin/src"
               destdir="${build.dir}/CeylonIDEA/classes"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.ide.classpath">
        </javac>
        <copy todir="${build.dir}/CeylonIDEA/classes">
            <fileset dir="${basedir}/jps-plugin/src" includes="META-INF/**"/>
        </copy>
        <javac2 srcdir="${basedir}/src:${basedir}/plugin-ceylon-code/src:${basedir}/plugin-ceylon-code/gen"
               destdir="${build.dir}/CeylonIDEA/classes"
               debug="true" debuglevel="lines,vars,source"
               classpathref="compile.ide.classpath">
        </javac2>
        <copy todir="${build.dir}/CeylonIDEA/classes">
            <fileset dir="${basedir}/resources"/>
        </copy>
        <mkdir dir="${build.dir}/CeylonIDEA/classes/embeddedDist"/>
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist">
            <fileset dir="${projects.base.dir}/ceylon/dist/dist" includes="**"/>
        </copy>

        <!-- dart compiler & cli -->
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <fileset dir="${projects.base.dir}/ceylon-dart/ceylon-dart-compiler/build/modules-jvm/main" includes="com/**/*.car*"/>
        </copy>
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <fileset dir="${projects.base.dir}/ceylon-dart/ceylon-dart-cli/build/modules-jvm/main" includes="com/**/*.car*"/>
        </copy>
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <fileset dir="${projects.base.dir}/ceylon-structures/modules" includes="com/**/*.car*"/>
        </copy>

        <!-- sdk modules used by dart compiler & cli -->
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <fileset dir="${projects.base.dir}/ceylon-sdk/modules">
                <include name="ceylon/buffer/**/*.car*"/>
                <include name="ceylon/collection/**/*.car*"/>
                <include name="ceylon/file/**/*.car*"/>
                <include name="ceylon/interop/java/**/*.car*"/>
                <include name="ceylon/json/**/*.car*"/>
                <include name="ceylon/process/**/*.car*"/>
                <include name="ceylon/whole/**/*.car*"/>
            </fileset>
        </copy>

        <!-- ceylon.ast modules used by dart compiler & cli -->
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <fileset dir="${projects.base.dir}/ceylon.ast/modules">
                <include name="ceylon/ast/core/**/*.car*"/>
                <include name="ceylon/ast/redhat/**/*.car*"/>
                <include name="ceylon/ast/create/**/*.car*"/>
            </fileset>
        </copy>

        <!-- dart bin scripts -->
        <copy todir="${build.dir}/CeylonIDEA/classes/embeddedDist/bin">
            <fileset dir="${projects.base.dir}/ceylon-dart/ceylon-dart-cli/script/com/vasileff/ceylon/dart/cli" includes="*.plugin"/>
        </copy>

        <!-- dart runtime modules -->
        <unzip src="${projects.base.dir}/ceylon-dart/ceylon-dart-language/build/distributions/ceylon-dart-language-0.0.1.zip"
               dest="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <cutdirsmapper dirs="1"/>
        </unzip>
        <unzip src="${projects.base.dir}/ceylon-dart/ceylon-dart-sdk/build/distributions/ceylon-dart-sdk-0.0.1.zip"
               dest="${build.dir}/CeylonIDEA/classes/embeddedDist/repo">
            <cutdirsmapper dirs="1"/>
        </unzip>

        <copy todir="${build.dir}/CeylonIDEA">
            <fileset dir="${basedir}" includes="META-INF/**"/>
        </copy>
        <replace file="${build.dir}/CeylonIDEA/META-INF/plugin.xml"
                 value="${module.com.redhat.ceylon.ide.intellij.version}-${NOW}">
            <replacetoken>$pluginVersion$</replacetoken>
        </replace>
        <copy todir="${build.dir}/CeylonIDEA/lib" flatten="true">
           <path refid="dist.classpath"/>
        </copy>

        <zip destfile="${basedir}/out/installation-packages/CeylonIDEA.zip"
             basedir="${build.dir}" includes="CeylonIDEA/**"/>
    </target>

    <target name="generate-update-site">
        <property name="updatePluginsFile" location="${basedir}/out/installation-packages/updatePlugins.xml"/>

        <delete dir="${updatePluginsFile}"/>
        <xmlproperty file="${build.dir}/CeylonIDEA/META-INF/plugin.xml" prefix="CeylonIDEA"/>
        <echoxml file="${updatePluginsFile}">
            <plugin-repository>
                <ff>"Custom Languages"</ff>
                <category name="Custom Languages">
                    <idea-plugin>
                        <id>${CeylonIDEA.idea-plugin.id}</id>
                        <name>${CeylonIDEA.idea-plugin.name}</name>
                        <version>${CeylonIDEA.idea-plugin.version}</version>
                        <idea-version since-build="${CeylonIDEA.idea-plugin.idea-version(since-build)}"/>
                        <downloadUrl>./CeylonIDEA.zip</downloadUrl>
                    </idea-plugin>
                </category>
            </plugin-repository>
        </echoxml>
    </target>

    <target name="build"
            description="Builds the IDE plugin">
        <ant antfile="${basedir}/plugin-ceylon-code/build.xml"
             target="build"
             dir="${basedir}/plugin-ceylon-code"
             inheritall="false">
        </ant>
        <antcall target="build-ide"/>
        <antcall target="generate-update-site"/>
    </target>

    <target name="clean"
            description="Cleans the build environment">
        <ant antfile="${basedir}/plugin-ceylon-code/build.xml"
             target="clean"
             dir="${basedir}/plugin-ceylon-code"
             inheritall="false">
        </ant>
        <delete dir="${build.dir}"/>
    </target>
</project>
